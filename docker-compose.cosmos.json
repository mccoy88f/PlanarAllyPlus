{
  "services": {
    "planarally": {
      "container_name": "planarally",
      "image": "mccoy88f/planarally:latest",
      "restart": "unless-stopped",
      "user": "9000",
      "environment": ["PA_BASEPATH=/"],
      "ports": ["8000:8000"],
      "volumes": [
        { "source": "planarally_assets", "target": "/planarally/static/assets", "type": "volume" },
        { "source": "planarally_data", "target": "/planarally/data", "type": "volume" }
      ],
      "networks": { "planarally-net": {} },
      "command": "uv run planarally.py",
      "entrypoint": "/usr/bin/dumb-init --"
    }
  },
  "volumes": [
    { "name": "planarally_assets", "driver": "local" },
    { "name": "planarally_data", "driver": "local" }
  ],
  "networks": {
    "planarally-net": {
      "name": "planarally-net",
      "driver": "bridge"
    }
  }
}
